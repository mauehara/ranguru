<%= form_tag users_path, :method => 'get', :id => "user_search" do %>
  	<i class="fi-magnifying-glass"></i>
    <%= text_field_tag :search, params[:search], placeholder: "Buscar UsuÃ¡rios" %>
<% end %>

<ul id="user_list">
<% for user in @users %>	
	<% unless user == current_user %>
		<li data-user-id="<%= user.id %>" class="item">
			    <% if friend_is_in_session(user.id) %> 
			    	<i class="fi-minus" style="float:left"></i>
			    <% else %>
			    	<i class="fi-plus" style="float:left"></i>
			    <% end %>
				<div class="info">
					<span class="user-name"><%= user.name %></span><br/>
					<span class="user-email"><%= user.email %></span>
				</div>
				<div style="clear:both;"></div>
		</li>
	<% end %>
<% end %>
</ul>

<div class="centered ">
  <a class="round small button" href="/users/return_to_origin">Voltar</a>
</div>