Restaurants

<%= form_tag restaurants_path, :method => 'get', :id => "restaurant_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<ul>
<% for restaurant in @restaurants %>
	<li>
		<%= restaurant.name %>
		<%= restaurant.address %>
	</li>
<% end %>
</ul>