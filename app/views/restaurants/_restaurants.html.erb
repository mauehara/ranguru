<% for restaurant in @restaurants %>
	<li data-restaurant-id="<%= restaurant.id %>" class="item">
			<img class="radius" src="<%= restaurant.image_url %>">
			<div class="info">
				<span class="restaurant-name"><%= restaurant.name %></span><br/>
				<span class="restaurant-address"><%= restaurant.address %></span>
			</div>
			<div style="clear:both;"></div>
	</li>
<% end %>